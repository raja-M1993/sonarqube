{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strict": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "strictFunctionTypes": false,
    "baseUrl": "./",
    "paths": {
      "*": ["../sonar-web/node_modules/@types/*", "./node_modules/@types/*", "*"]
    }
  },
  "include": ["./src/main/js/**/*"]
}
